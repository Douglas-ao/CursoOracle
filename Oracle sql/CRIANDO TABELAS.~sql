---------------------------------------------------
-----CRIANDO UMA TABELA PESSOA---------------------
CREATE TABLE PESSOA(
  NR_CPF        VARCHAR2(11),
  NM_PESSOA     VARCHAR2(100),
  DT_NASCIMENTO DATE,
  CONSTRAINT PKPESSOA PRIMARY KEY (NR_CPF)
);

INSERT INTO PESSOA(NR_CPF,NM_PESSOA,DT_NASCIMENTO)
VALUES('10233497805','DOUGLAS OLIVEIRA','05/02/1997');

SELECT * FROM PESSOA;
-----------------------------------------------------
---------CRIANDO UMA TABELA SALA---------------------
CREATE TABLE SALA(
  CD_SALA        NUMBER(10),
  DS_SALA        VARCHAR2(100),
  VL_HORASALA    NUMBER(15,2),
  DS_PREDIO      VARCHAR2(100),
  CONSTRAINT PKSALA PRIMARY KEY (CD_SALA)
);

SELECT * FROM SALA;
-----------------------------------------------------
---------CRIANDO UMA TABELA RESERVA---------------------
CREATE TABLE RESERVA(
  CD_RESERVA     NUMBER(15),
  CD_SALA        NUMBER(10),
  VL_HORA        NUMBER(15,2),
  QT_HORAS       NUMBER(15,2),
  NR_CPFPESSOA   VARCHAR2(11), 
  DT_RESERVADA   DATE,
  CONSTRAINT PKRESERVA PRIMARY KEY (CD_RESERVA),
  CONSTRAINT FKRESERVA_SALA FOREIGN KEY (CD_SALA) REFERENCES SALA (CD_SALA),
  CONSTRAINT FKRESERVA_PESSOA FOREIGN KEY (NR_CPFPESSOA) REFERENCES PESSOA (NR_CPF)
);

SELECT * FROM RESERVA;


